{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@ifc/plugin": [
        "node_modules/@epgu/epgu-lib/assets/vendor/ifcplugin-lib.js"
      ],
      "@ifc/common": [
        "node_modules/@epgu/epgu-lib/assets/vendor/ifccommon-lib.js"
      ],
      "epgu-constructor": [
        "dist/epgu-constructor"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "**/*.stories.*"
  ]
}
