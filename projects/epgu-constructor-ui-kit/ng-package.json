  "dest": "../../dist/epgu-constructor-ui-kit",
  "assets": ["src/styles", "src/assets"],
  "allowedNonPeerDependencies": [
    "@epgu/epgu-constructor-types",
    "zipkin",
    "zipkin-transport-http"
