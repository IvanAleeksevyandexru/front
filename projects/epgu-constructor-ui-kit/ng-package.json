{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/epgu-constructor-ui-kit",
  "assets": ["src/styles", "src/assets"],
  "allowedNonPeerDependencies": [
    "@epgu/epgu-constructor-types",
    "@epgu/zipkin",
    "zipkin-transport-http",
    "ismobilejs"
  ],
  "lib": {
    "entryFile": "src/public-api.ts",
    "cssUrl": "inline",
    "styleIncludePaths": ["."],
    "umdModuleIds": {
      "@epgu/epgu-constructor-types": "@epgu/epgu-constructor-types",
      "@epgu/zipkin": "@epgu/zipkin",
      "zipkin-transport-http": "zipkin-transport-http",
      "ismobilejs": "ismobilejs"
    }
  }
}
