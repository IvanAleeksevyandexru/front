{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "epgu-form-frontend": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/epgu-form-frontend",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              {
                "glob": "**/*",
                "input": "dist/epgu-constructor/src/assets",
                "output": "assets"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/epgu-lib/assets/",
                "output": "./lib-assets"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "host": "local.test.gosuslugi.ru",
            "browserTarget": "epgu-form-frontend:build",
            "port": 4200,
            "proxyConfig": "src/proxy.conf.json",
            "sourceMap": {
              "scripts": true,
              "styles": true,
              "vendor": false
            }
          },
          "configurations": {
            "production": {
              "browserTarget": "epgu-form-frontend:build:production"
            },
            "staging": {
              "browserTarget": "epgu-form-frontend:build:staging"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "epgu-form-frontend:build"
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "epgu-form-frontend:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "epgu-form-frontend:serve:production"
            }
          }
        }
      }
    },
    "epgu-constructor": {
      "projectType": "library",
      "root": "projects/epgu-constructor",
      "sourceRoot": "projects/epgu-constructor/src",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "prefix": "epgu-constructor",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/epgu-constructor/tsconfig.lib.json",
            "project": "projects/epgu-constructor/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/epgu-constructor/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": "projects/epgu-constructor/.eslintrc.js",
            "tsConfig": [
              "projects/epgu-constructor/tsconfig.lib.json",
              "tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "epgu-form-frontend",
  "cli": {
    "analytics": false
  }
}
